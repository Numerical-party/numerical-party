{% extends 'base.html.twig' %}

{% block title %}Création de groupe
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Créer un groupe</h1><br/>

		{{ form_start(form) }}
		<p>Votre pseudonyme</p>
		<input disabled value="{{ app.user.nickname }}" class="form-control"><br/>
		<p>Quel membre souhaitez-vous inviter?</p>
		{{ form_widget(form.member_invited) }}<br/>
		<button class="btn btn-success" type="submit">Envoyer</button>
		{{ form_end(form) }}

	</div>
{% endblock %}
